<h1>Your Links</h1>

<div id="errors">

</div>

<div class="add-link">
  <%= form_for @link, url: api_v1_links_path, :html => {:id => "new-link"} do |f| %>
    <%= f.url_field :url %>
    <%= f.label :url, 'URL' %>

    <%= f.text_area :title %>
    <%= f.label :title %>

    <%= f.submit "Submit" %>
  <% end %>
</div>

<h3>Filter here</h3>
<input type="text" id='filter-input' placeholder="Search here...">
<input type="button" id='filter-read' value='Show Read'>
<input type="button" id='filter-unread' value='Show Unread'>

<hr/>

<div class="links">
  <p><% @links.each do |link| %></p>
    <% if link.read %>
      <%= render partial: 'link', locals: {link: link, my_class: 'is-read'} %>
    <% else %>
      <%= render partial: 'link', locals: {link: link, my_class: ''} %>
    <% end %>
  <% end %>
</div>

<div class="signout">
  <%= link_to "Sign Out", logout_path, method: 'delete' %>
</div>
